{
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "out",
        "lib": [ "es2016" ],
        "sourceMap": true
    },
    "include": [
		"src"
	],
    "exclude": [
        "node_modules",
    ]
}