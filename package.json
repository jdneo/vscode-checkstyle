{
    "name": "vscode-checkstyle",
    "displayName": "vscode-checkstyle",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "java.checkstyle.check",
                "title": "%contributes.commands.java.checkstyle.check.title%",
                "category": "Checkstyle"
            }
        ],
        "configuration": {
            "title": "Checkstyle",
            "properties": {
                "java.checkstyle.configuration": {
                    "type": "string",
                    "description": "%configuration.java.checkstyle.configuration.description%",
                    "scope": "resource"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
